

<div>
  <form action="/item/update/<%= item.id %>" method="post">
    <div class="form-group row">
      <label for="" class="col-2">商品コード</label>
      <input type="text" name="code" value="<%= item.code %>" class="form-control col-10">
    </div>
    <div class="form-group row">
      <label for="" class="col-2">商品名</label>
      <input type="text" name="name" value="<%= item.name %>" class="form-control col-10">
    </div>
    <div class="form-group row">
      <label for="" class="col-2">価格</label>
      <input type="text" name="price" value="<%= item.price %>" class="form-control col-10">
    </div>
    <button class="btn btn-primary">更新</button>
    <a href="/item" class="btn btn-outline-primary">戻る</a>
  </form>
</div>
<form action="/item/delete/<%= item.id %>" method="POST">
<button class="btn btn-danger">Delete</button>
</form>